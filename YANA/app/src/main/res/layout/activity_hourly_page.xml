    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="580dp"



        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:backgroundTint="#9900F3FF"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="YAMAHA EV 310"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bill"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="389dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:elevation="5dp"
                        android:orientation="horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time format"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:text="                                         Daily"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="389dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:elevation="5dp"
                        android:orientation="horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Away"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:text="                                                     2 km "
                        android:textSize="15sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="389dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:elevation="5dp"
                        android:orientation="horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Range"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:text="                                                50 KMS"
                        android:textSize="15sp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/line_26" />

                <LinearLayout
                    android:layout_width="389dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:elevation="5dp"
                        android:orientation="horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Charge"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"

                        android:text="                                       â‚¹ 250 /-"
                        android:textSize="15sp" />


                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Pickup Date"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                />
            <LinearLayout
                android:layout_width="324dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/transparentbuttonstyle"
                android:orientation="horizontal"
                android:padding="5dp"

                >


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/weekly_pickup_date_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/inputstyle"
                    android:hint="Click the icon to add Date"
                    android:inputType="datetime"
                    android:padding="5dp" />

                <ImageButton
                    android:id="@+id/weekly_pickup_date_button"

                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="4dp"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/calendar_days_solid" />


            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Pickup Time"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                />

            <LinearLayout
                android:layout_width="324dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/transparentbuttonstyle"
                android:orientation="horizontal"
                android:padding="5dp"

                >


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/inputstyle"
                    android:hint="Click the timer icon to add time"
                    android:inputType="datetime"
                    android:padding="5dp" />

                <ImageButton
                    android:id="@+id/btnAddTime"

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="4dp"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/timer_svgrepo_com" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Deliver Time"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                />
            <LinearLayout
                android:layout_width="324dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/transparentbuttonstyle"
                android:orientation="horizontal"
                android:padding="5dp">


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/delivertime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/inputstyle"
                    android:hint="Click the timer icon to add time"
                    android:inputType="datetime"
                    android:padding="5dp" />

                <ImageButton
                    android:id="@+id/btnAddTimeDeliver"

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="TODO"
                    android:layout_margin="4dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/timer_svgrepo_com" />


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Type of Pick  Up"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                />

            <Spinner
                android:id="@+id/spinner_main"
                android:layout_width="324dp"
                android:layout_height="45dp"
                android:background="@drawable/transparentbuttonstyle"
                android:layout_marginTop="5dp"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bookButton1"
                android:layout_width="132dp"
                android:layout_height="60dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="10dp"
                android:background="@drawable/book_btn"
                android:text="@string/book_now"
                android:textAllCaps="false"
                android:textColor="@color/black" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/daily_img"
        android:layout_width="232dp"
        android:layout_height="203dp"
        android:layout_gravity="center_horizontal"
        android:elevation="5dp"
        android:gravity="center_horizontal"
        android:scaleType="centerInside"
        android:src="@drawable/img2"

        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
